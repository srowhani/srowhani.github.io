<header id="header" class="clear">
	<div>
		<h1 class="name">{{resume.lead.name}}</h1>
		<h2 class="label">{{resume.lead.position}}</h2>
	</div>
	{{#resume.about.location}}
	<span class="location">
		{{#if address}}
		<span class="address">{{address}},</span>
		{{/if}}
		{{#if postalCode}}
		<span class="postalCode">{{postalCode}},</span>
		{{/if}}
		{{#if city}}
		<span class="city">{{city}},</span>
		{{/if}}
		{{#if region}}
		<span class="region">{{region}}</span>
		{{/if}}
		{{#if countryCode}}
		<span class="countryCode">{{countryCode}}</span>
		{{/if}}
	</span>
	{{/resume.about.location}}
	<div id="contact">
		{{#if resume.footer.social.website}}
		<div class="website">
			<span class="fa fa-external-link"></span>
			<a target="_blank" target="_blank" href="{{resume.footer.social.website}}">{{resume.footer.social.website}}</a>
		</div>
		{{/if}}
		{{#if resume.contact.email}}
		<div class="email">
			<span class="fa fa-envelope-o"></span>
			<a href="mailto:{{atob resume.contact.email}}">{{atob resume.contact.email}}</a>
		</div>
		{{/if}}
	</div>

	{{#if resume.footer.social.profiles.length}}
	<div id="profiles">
		{{#each resume.footer.social.profiles}}
		<div class="item">
			{{#if network}}
			<div class="username">
				<span class="fa fa-{{spaceToDash network}} {{spaceToDash network}} social"></span>
				{{#if url}}
				<span class="url">
					<a target="_blank" href="{{url}}">{{username}}</a>
				</span>
				{{else}}
				<span>{{username}}</span>
				{{/if}}
			</div>
			{{/if}}
		</div>
		{{/each}}
	</div>
	{{/if}}
</header>

{{#if resume.about.description}}
<section class="section main-summary">
	<section>
		<div>{{paragraphSplit resume.about.description}}</div>
	</section>
</section>
{{/if}}
